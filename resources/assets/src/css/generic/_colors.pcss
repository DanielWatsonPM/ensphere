$flat-green-dk:     #27AE60;
$flat-mint:         #1ABC9C;
$flat-mint-dk:      #16A085;
$flat-blue:         #3498DB;
$flat-blue-dk:      #2980B9;
$flat-navy:         #34495E;
$flat-navy-dk:      #2C3E50;
